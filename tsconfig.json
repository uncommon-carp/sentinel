{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "rootDir": "src",
    "outDir": "dist",
    "types": [
      "node"
    ],
    "sourceMap": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "test",
    "dist",
    "node_modules"
  ]
}
