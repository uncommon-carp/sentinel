{
  "name": "sentinel-cli",
  "version": "0.1.0",
  "description": "Sentinel: CLI API security scanner (passive + active checks)",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uncommon-carp/sentinel.git"
  },
  "homepage": "https://github.com/uncommon-carp/sentinel#readme",
  "bugs": {
    "url": "https://github.com/uncommon-carp/sentinel/issues"
  },
  "keywords": [
    "security",
    "api",
    "scanner",
    "openapi",
    "cli",
    "cors",
    "headers",
    "auth"
  ],
  "engines": {
    "node": ">=18"
  },
  "prepare": "npm run build",
  "bin": {
    "sentinel": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "typecheck:test": "tsc -p tsconfig.test.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src test",
    "format": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'test/**/*.ts'"
  },
  "dependencies": {
    "@apidevtools/swagger-parser": "^12.1.0",
    "commander": "^12.0.0",
    "yaml": "^2.8.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.19.30",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.54.0",
    "vitest": "^2.1.9"
  }
}
